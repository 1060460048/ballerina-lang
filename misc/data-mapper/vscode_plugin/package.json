{
	"name": "BallerinaAI",
	"displayName": "Ballerina AI",
	"description": "AI-based code refactoring for Ballerina",
	"version": "0.0.1",
	"publisher": "Ballerina",
	"engines": {
		"vscode": "^1.30.2"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.installRecordMappingFunctionality",
		"onCommand:extension.setupAIserviceURL"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.installRecordMappingFunctionality",
				"title": "Setup Ballerina Record Mapping Functionality"
			},
			{
				"command": "extension.setupAIserviceURL",
				"title": "Setup the AI Service URL"
			}
		],
		"configuration": {
			"type": "object",
			"title": "BallerinaAI",
			"properties": {
				"BallerinaAI.AI_SERVICE_URL":{
					"type": "string",
					"default": "",
					"description": "Specify the URL of the AI service"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.30.2",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
