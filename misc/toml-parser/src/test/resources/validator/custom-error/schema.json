{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ballerina Manifest Spec",
    "description": "Schema for Ballerina Manifest",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "package": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "message" : {
                        "type" : "Invalid Type"
                    }
                },
                "org": {
                    "type": "string",
                    "pattern": "^(?!\\s*$).+",
                    "message" : {
                        "pattern" : "Org cant be empty"
                    }
                },
                "version": {
                    "type": "string",
                    "pattern": "^(?!\\s*$).+"
                },
                "port": {
                    "type": "integer",
                    "minimum": 0,
                    "message" : {
                        "minimum" : "Port should be positive int"
                    }
                },
                "capacity": {
                    "type": "integer",
                    "maximum": 5,
                    "message" : {
                        "maximum" : "Max Capacity is 5"
                    }
                },
                "repository": {
                    "type": "string"
                },
                "keywords": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "exported": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["name","org"],
            "message" : {
                "required" : "name and org should exists",
                "additionalProperties" : "Properties can only contain name, org, version, port, capacity, repository, keywords, exported"
            }
        }
    }
}
